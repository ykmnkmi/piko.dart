import 'package:piko/piko.dart';

class App extends Component<App> {
  App() : count = 0;

  int count;

  void handleClick() {
    count += 1;
  }

  @override
  Fragment<App> render() {
    return <button (click)="handleClick()">Clicked {{ count }} {{ count == 1 ? 'time' : 'times' }}</button>;
  }
}
