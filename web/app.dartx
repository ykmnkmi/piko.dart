import 'package:piko/internal.dart';

class App extends Component<App> {
  App({this.count = 0});
  
  int count;

  void handleClick() {
		count += 1;
    markDirty('count');
	}

  @override
  Fragment<App> render(RenderTree tree) {
    return <button on:click={ handleClick }>Clicked { count } { count == 1 ? 'time' : 'times' }</button>;
  }
}
